service firebase.storage {
  match /b/{bucket}/o {
    // Contactsâ€™ photos
    match /contacts/{contactId}/photo.jpg {
      allow read, write: if request.auth != null;
    }

    // Images
    match /project_images/{projectId}/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Arbitrary files (PDFs, docs, etc.)
    match /project_files/{projectId}/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    //  existing buckets
    match /stock_images/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
